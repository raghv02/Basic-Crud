<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>User Data</title>
  <style>
    /* Center the main container */
    .main-container {
      max-width: 800px;
      margin: 0 auto;
      padding: 20px;
    }
    /* Additional styles for the table */
    table {
      width: 100%;
      border-collapse: collapse;
      margin-top: 20px;
    }
    th, td {
      border: 1px solid #000;
      padding: 8px;
      text-align: left;
    }
    th {
      background-color: #f2f2f2;
      font-weight: bold;
      color: #000; /* Black text on light gray background */
    }
    tr:nth-child(even) {
      background-color: #eaf3fc; /* Light Gray */
    }
    tr:nth-child(odd) {
      background-color: #f9f9f9; /* White */
    }
    /* Additional styles for the "Delete" button */
    .delete-button {
      background-color: #f44336;
      border: none;
      color: white;
      padding: 8px 16px;
      text-align: center;
      text-decoration: none;
      display: inline-block;
      font-size: 14px;
      margin: 2px 2px;
      cursor: pointer;
      border-radius: 4px;
    }
    .delete-button:hover {
      background-color: #d32f2f;
    }
  </style>
</head>
<body>
  <div class="main-container">
    <h1 style="text-align: center;">USER DETAILS</h1>
    <table>
      <thead>
        <tr>
          <th>ID</th>
          <th>Name</th>
          <th>Email</th>
          <th>Age</th>
          <th>Action</th>
        </tr>
      </thead>
      <tbody>
        <% users.forEach((user, index) => { %>
          <tr <%= index % 2 === 0 ? 'style="background-color: #eaf3fc;"' : 'style="background-color: #f9f9f9;"' %>>
            <td><%= user.idusers %></td>
            <td><%= user.name %></td>
            <td><%= user.email %></td>
            <td><%= user.age %></td>
            <td style="text-align: center;">
              <form action="/delete" method="post">
                <input type="hidden" name="idusers" value="<%= user.idusers %>">
                <button type="submit" class="delete-button">Delete</button>
              </form>
            </td>
          </tr>
        <% }); %>
      </tbody>
    </table>
  </div>
</body>
</html>
